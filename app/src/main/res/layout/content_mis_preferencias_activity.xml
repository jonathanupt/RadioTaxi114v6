<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MisPreferenciasActivity"
    tools:showIn="@layout/activity_mis_preferencias_activity"
    android:background="@drawable/dra_fondo"
    >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CapScroll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:background="@drawable/dra_fondo_contenido"

            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/CapScrollContenido">

            <LinearLayout


                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    style="@style/est_etiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonido:"
                    android:id="@+id/textView30"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    style="@style/est_subetiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonido ejecutado durante la recepcion de pedidos"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView33"
                    android:layout_below="@+id/textView30"
                    android:layout_alignParentLeft="true" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activar"
                    android:id="@+id/SwiMonitoreoSonido"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="383dp"
                android:layout_height="match_parent" >

                <TextView
                    style="@style/est_etiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tono:"
                    android:id="@+id/textView98"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView39" />

                <TextView
                    style="@style/est_subetiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escoje el tono de notificacion de pedido"
                    android:id="@+id/textView99"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView98" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/CmpMensaje"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" >

                    <RadioButton
                        style="@style/est_contenido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ninguno"
                        android:id="@+id/RadioButton0"
                        android:layout_below="@+id/CmpMensaje"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:checked="false" />

                    <RadioButton
                        style="@style/est_contenido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tono 1"
                        android:id="@+id/RadioButton1"
                        android:layout_below="@+id/CmpMensaje"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:checked="false" />

                    <RadioButton
                        style="@style/est_contenido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tono 2"
                        android:id="@+id/RadioButton2"
                        android:layout_below="@+id/CmpMensaje"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:checked="false" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="383dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/est_etiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantalla:"
                    android:id="@+id/textView40"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView39" />

                <TextView
                    style="@style/est_subetiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encender pantalla al ingresar un pedido nuevo"
                    android:id="@+id/textView42"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView40" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activar"
                    android:id="@+id/SwiMonitoreoEncendido"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="383dp"
                android:layout_height="match_parent" >

                <TextView
                    style="@style/est_etiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fondo"
                    android:id="@+id/textView96"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView39" />

                <TextView
                    style="@style/est_subetiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activar el fondo con menos brillo"
                    android:id="@+id/textView97"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView96" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activar"
                    android:id="@+id/SwiMonitoreoFondo"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/est_etiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UbicaciÃ³n:"
                    android:id="@+id/textView82"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView39" />

                <TextView
                    style="@style/est_subetiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configura tu gps a la mejor precision"
                    android:id="@+id/textView83"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView40" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurar GPS"
                    android:id="@+id/BtnMisPreferenciasConfigurarGPS"
                    android:onClick="onClick_BtnMisPreferenciasConfigurarGPS" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CapBotones"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                style="@style/est_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:background="@drawable/dra_boton_fondo"
                android:drawableLeft="@mipmap/icon_cancelar35"
                android:id="@+id/BtnMisPreferenciasRegresar"
                android:onClick="onClick_BtnMisPreferenciasRegresar"
                android:layout_above="@+id/CapBotones"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.43" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
