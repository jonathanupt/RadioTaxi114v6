<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/dra_fondo"
    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapMainScroll"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/CapMainContenidoScroll">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="35dp"
                android:id="@+id/CapMainContenidos">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/CapTitulo"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="ACCESO A CONDUCTORES"
                        android:id="@+id/textView"

                        style="@style/est_titulo"

                        android:layout_above="@+id/CmpContrasena"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/CapLogo"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@drawable/icon_logo_formulario"
                        android:layout_above="@+id/textView2"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/CapSeparacion1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="-"
                        android:id="@+id/textView66" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout"
                    android:gravity="center_horizontal" >

                    <TextView
                        style="@style/est_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Usuario:"
                        android:id="@+id/textView94"
                        android:layout_above="@+id/CmpUsuario"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp" />

                    <EditText
                        style="@style/est_contenido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:id="@+id/CmpUsuario"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView"
                        android:layout_alignRight="@+id/textView"
                        android:layout_alignEnd="@+id/textView"
                        android:background="@drawable/dra_campo"
                        android:hint="Ingrese su usuario" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/CapContenido"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/est_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Clave de acceso:"
                        android:id="@+id/textView64"
                        android:layout_above="@+id/CmpContrasena"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/CmpContrasena"
                        style="@style/est_contenido"

                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView"
                        android:layout_alignRight="@+id/textView"
                        android:layout_alignEnd="@+id/textView"
                        android:background="@drawable/dra_campo" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout17"
                    android:gravity="center_horizontal" >

                    <TextView
                        style="@style/est_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="UbicaciÃ³n:"
                        android:id="@+id/textView120"
                        android:layout_above="@+id/CmpMainRegionNombre"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            style="@style/est_contenido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/CmpMainRegionNombre"
                            android:layout_centerVertical="true"
                            android:layout_alignLeft="@+id/textView"
                            android:layout_alignStart="@+id/textView"
                            android:layout_alignRight="@+id/textView"
                            android:layout_alignEnd="@+id/textView"
                            android:background="@drawable/dra_campo" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/CapPie"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/CapVersion"
                    android:gravity="right">

                    <TextView
                        style="@style/est_aviso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/app_version"
                        android:id="@+id/textView92"
                        android:layout_above="@+id/CmpContrasena"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/CapSeparacion2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="-"
                        android:id="@+id/textView59" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/CapBotones"
                    android:gravity="center_horizontal">

                    <Button
                        style="@style/est_boton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ubicar"
                        android:background="@drawable/dra_boton_fondo"
                        android:id="@+id/BtnMainUbicar"
                        android:drawableLeft="@mipmap/icon_ubicacion35"
                        android:onClick="onClick_BtnMainUbicar"
                        android:layout_below="@+id/CmpContrasena"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_alignRight="@+id/textView3"
                        android:layout_alignEnd="@+id/textView3"
                        android:layout_weight="0.5" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acceder"

                        android:background="@drawable/dra_boton_fondo"
                        style="@style/est_boton"

                        android:id="@+id/BtnAcceder"

                        android:drawableLeft="@mipmap/icon_usuario35"

                        android:onClick="onClick_BtnMainAcceder"
                        android:layout_below="@+id/CmpContrasena"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_alignRight="@+id/textView3"
                        android:layout_alignEnd="@+id/textView3"
                        android:layout_weight="0.5" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/CapPie"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="http://www.radiotaxi114.com"

                        style="@style/est_etiqueta"

                        android:id="@+id/textView3"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
