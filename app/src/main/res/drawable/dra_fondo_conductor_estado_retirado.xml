<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/ColorFondoConductorRetirado1" />
            <stroke
                android:width="1dp"
                android:color="@color/ColorFondoConductorRetirado2" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="7dp"
                android:top="3dp"
                android:right="7dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/ColorFondoConductorRetirado1"
                android:endColor="@color/ColorFondoConductorRetirado2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/ColorBorde1" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="7dp"
                android:top="3dp"
                android:right="7dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>